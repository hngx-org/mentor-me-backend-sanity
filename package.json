{
    "name": "mentor-Me",
    "version": "1.0.0",
    "private": true,
    "author": "Daniel Bemsen <danireptor7@gmail.com>",
    "engines": {
        "node": "^18"
    },
    "scripts": {
        "build": "yarn add typescript && npx tsc && tsc-alias",
        "start": "yarn build && node dist/src/index.js",
        "dev": "nodemon --ext 'ts, tsx, json' --watch src --exec ts-node -r tsconfig-paths/register src/index.ts",
        "lint": "eslint src/**/*.{ts,tsx}",
        "run:script": "ts-node -r tsconfig-paths/register --script-mode",
        "check-types": "tsc --pretty --noEmit",
        "check-format": "prettier --check .",
        "check-lint": "eslint . --ext ts --ext tsx --ext js",
        "format": "prettier --write .",
        "test-all": "yarn check-format && yarn check-lint && yarn check-types && yarn build",
        "test-dev": "yarn check-format && yarn check-lint && yarn check-types",
        "test-prod": "yarn check-format && yarn check-lint && yarn check-types && yarn start",
        "prepare": "husky install",
        "clean": "yarn check-lint --fix && yarn format"
    },
    "dependencies": {
        "@react-email/components": "^0.0.7",
        "@sentry/node": "^7.54.0",
        "aws-sdk": "^2.1458.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "helmet": "^7.0.0",
        "joi": "^17.9.2",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^7.2.0",
        "morgan": "^1.10.0",
        "ms": "^2.1.3",
        "nanoid": "^4.0.2",
        "nodemailer": "^6.9.2",
        "react": "^18.2.0",
        "typescript": "^5.0.4"
    },
    "devDependencies": {
        "@total-typescript/ts-reset": "^0.4.2",
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/helmet": "^4.0.0",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/morgan": "^1.9.4",
        "@types/ms": "^0.7.31",
        "@types/node": "^20.2.1",
        "@types/nodemailer": "^6.4.8",
        "@types/react": "^18.2.6",
        "@typescript-eslint/eslint-plugin": "^5.59.6",
        "@typescript-eslint/parser": "^5.59.6",
        "eslint": "^8.41.0",
        "husky": "^8.0.3",
        "nodemon": "^2.0.22",
        "prettier": "^3.0.3",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.6",
        "tsconfig-paths": "^4.2.0"
    }
}
